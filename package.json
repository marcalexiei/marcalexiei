{
  "name": "marcalexiei",
  "version": "1.0.0",
  "description": "Github profile page",
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "prepare": "husky",
    "format": "biome format . .github",
    "format:fix": "npm run format -- --write",
    "test:word-spell": "npx cspell . --show-context",
    "test:markdown": "markdownlint ./*.md",
    "test": "npm run test:markdown && npm run test:word-spell"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcalexiei/marcalexiei.git"
  },
  "author": "Marco Pasqualetti <marco.pasqualetti@live.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcalexiei/marcalexiei/issues"
  },
  "homepage": "https://github.com/marcalexiei/marcalexiei#readme",
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "cspell": "8.6.1",
    "husky": "9.0.11",
    "markdownlint": "0.34.0",
    "markdownlint-cli": "0.39.0"
  }
}
